{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}

	<div class="container">
		<table class="table table-striped table-inverse table-responsive">
			<thead class="thead-inverse">
				<tr>
					<th>#</th>
					<th>Title</th>
					<th>Content</th>
                    <th>Accion</th>
				</tr>
			</thead>
			<tbody>
				{% for data in listaDatos %}
					<tr>
						<td scope="row">{{data.id}}</td>
						<td>{{data.title}}</td>
						<td>{{data.content}}</td>
                        <td>
                            <a name="" id="" class="btn btn-warning" href="{{ path('update', {'id': data.id}) }}" role="button">Update</a>
                            <a name="" id="" class="btn btn-danger" href="{{path('update',{'id':{{data.id}}})}}" role="button">Danger</a>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>


{% endblock %}

